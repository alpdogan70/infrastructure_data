set -euo pipefail

# Configuration
ENERGY_AI_BASE="{{ energy_ai_paths.base | default('/opt/energy-ai') }}"
VENV_PATH="{{ python_ai.venv_path | default('/opt/energy-ai/venv') }}"
LOG_PATH="{{ energy_ai_paths.logs | default('/opt/energy-ai/logs') }}"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

# Counters
TOTAL_CHECKS=0
PASSED_CHECKS=0
FAILED_CHECKS=0
WARNING_CHECKS=0

# Functions
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[PASS]${NC} $1"
    ((PASSED_CHECKS++))
}

log_warning() {
    echo -e "${YELLOW}[WARN]${NC} $1"
    ((WARNING_CHECKS++))
}

log_error() {
    echo -e "${RED}[FAIL]${NC} $1"
    ((FAILED_CHECKS++))
}

check_count() {
    ((TOTAL_CHECKS++))
}

