    echo -e "${CYAN}â•‘               ðŸ” ENERGY AI DIAGNOSTICS TOOL                  â•‘${NC}"
    echo -e "${CYAN}â•‘                Version {{ energy_ai.version | default('1.0.0') }} - $(date '+%Y-%m-%d %H:%M:%S')                â•‘${NC}"
