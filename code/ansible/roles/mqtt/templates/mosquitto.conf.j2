# Mosquitto configuration
pid_file /var/run/mosquitto/mosquitto.pid
persistence true
persistence_location /data/data/
log_dest file /data/log/mosquitto.log
log_dest stdout
log_type all
log_timestamp true

# Network
listener 1883
protocol mqtt

listener 9001
protocol websockets

# Security
allow_anonymous false
password_file /etc/mosquitto/passwd

